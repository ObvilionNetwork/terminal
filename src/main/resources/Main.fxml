<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="root" prefHeight="660" prefWidth="1165" style="-fx-background-color: #18191b;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.obvilion.terminal.controllers.Controller">
   <Pane prefHeight="30.0" prefWidth="${root.width}" style="-fx-background-color: #1e1f22;">
      <Circle fx:id="CLOSE_BUTTON" fill="#f16972" layoutX="${root.width - 27}" layoutY="15.6" radius="6.4" strokeWidth="0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Circle>

      <Circle fx:id="MAXIMISE_BUTTON" fill="#f1a669" layoutX="${root.width - 49}" layoutY="15.6" radius="6.4" strokeWidth="0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Circle>

      <Circle fx:id="HIDE_BUTTON" fill="#83f691" layoutX="${root.width - 71}" layoutY="15.6" radius="6.4" strokeWidth="0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Circle>
   </Pane>


   <!-- Границы по вертикали для ресайза -->
   <Pane fx:id="RESIZE_DOWN" layoutY="660" prefHeight="2.5" prefWidth="${root.width - 2.5}">
      <cursor>
         <Cursor fx:constant="V_RESIZE" />
      </cursor>
   </Pane>
   <Pane fx:id="RESIZE_UP" prefHeight="2.5" prefWidth="${root.width - 2.5}">
      <cursor>
         <Cursor fx:constant="V_RESIZE" />
      </cursor>
   </Pane>

   <!-- Границы по горизонтали для ресайза -->
   <Pane fx:id="RESIZE_RIGHT" layoutX="1162.5" prefHeight="${root.height - 2.5}" prefWidth="2.5">
      <cursor>
         <Cursor fx:constant="H_RESIZE" />
      </cursor>
   </Pane>
   <Pane fx:id="RESIZE_LEFT" prefHeight="${root.height - 2.5}" prefWidth="2.5">
      <cursor>
         <Cursor fx:constant="H_RESIZE" />
      </cursor>
   </Pane>
</AnchorPane>
